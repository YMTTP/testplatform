<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="/css/reset.css" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/layout.css" rel="stylesheet">
    <script type="text/javascript" src="/lib/jquery.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/lib/avalon.js"></script>
    <script type="text/javascript" src="/js/common/util.js"></script>
    <script type="text/javascript" src="/js/common/common.js"></script>
    <script type="text/javascript" src="/js/index/moniterdetails.js"></script>
    <title>监控详情</title>
</head>

<body ms-controller="vm">
    <!--HEAD -->
    <div ms-include-src="'/home/header.html'"></div>
    <!--HEAD END-->
    <!-- Content -->
    <div class="container">
        <div ms-controller='detailsvm'>
            <div class="row">
                <div class="col-md-3">时间：{{time}} </div>
                <div class="col-md-3">创建人: {{creater}}</div>
            </div>
            <div class="row">
                <div class="col-md-1">描述</div>
                <div class="col-md-9" ms-visible="updateDescOff">{{desc}}</div>
                <div class="col-md-9" ms-visible="updateDescOn">
                    <input type="text" ms-duplex="desc">
                </div>
                <div class="col-md-2" ms-visible="isTester&&updateDescOff?true:false">
                    <button type="button" class="btn btn-default" ms-click="modifyDesc">修改描述</button>
                </div>
                <div class="col-md-2" ms-visible="isTester&&updateDescOn?true:false">
                    <button type="button" class="btn btn-default" ms-click="saveDesc">修改描述</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <button type="button" class="btn btn-default" ms-click="addServer">新增配置</button>
                </div>
                <div class="col-md-offset-8 col-md-2">
                    <button type="button" class="btn btn-default" ms-click="startMoniter">启动监控</button>
                </div>
            </div>
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <td class="width-50">#</td>
                        <td class="width-200">IP</td>
                        <td class="width-200">机器名</td>
                        <td>备注</td>
                        <td>监控</td>
                        <td class="width-100">修改</td>
                        <td class="width-100">删除</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ms-repeat="monitorServers">
                        <td>{{$index}}</td>
                        <td>{{el.ip}}</td>
                        <td>{{el.machinname}}</td>
                        <td>{{el.remark}}</td>
                        <td>{{el.monitor?"是":"否"}}</td>
                        <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></td>
                        <td><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
                    </tr>
                </tbody>
            </table>






            <!--ADD Server Modal -->
            <div class="modal fade" id="addMServerModal" tabindex="-1" role="dialog" aria-labelledby="addMServerModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myAddMServerModalLabel">{{MServerTittle}}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="input-group">
                                <span class="input-group-addon">描述:</span>
                                <textarea class="form-control" rows="3" ms-duplex="jobDesc" style="width: 100%;resize: none;"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-default" ms-click="createMServer">确定</button>
                            <button type="button" class="btn btn-default" ms-click="createMServer">确定</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--ADD Server Modal-->
        </div>
    </div>
    <!-- Content END-->
    <!--FOOTER -->
    <div ms-include-src="'/home/footer.html'"></div>
    <!--FOOTER END-->
</body>

</html>
