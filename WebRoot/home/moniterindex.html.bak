<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link href="/css/reset.css" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/layout.css" rel="stylesheet">
    <script type="text/javascript" src="/lib/jquery.js"></script>
    <script type="text/javascript" src="/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/bootstrap/js/jquery.bootpag.min.js"></script>
    <script type="text/javascript" src="/lib/avalon.js"></script>
    <script type="text/javascript" src="/js/common/util.js"></script>
    <script type="text/javascript" src="/js/common/common.js"></script>
    <script type="text/javascript" src="/js/index/moniterindex.js"></script>
    <title>性能监控</title>
</head>

<body ms-controller="vm">
    <!--HEAD -->
    <div ms-include-src="'/home/header.html'"></div>
    <!--HEAD END-->
    <!-- Content -->
    <div class="container">
        <div ms-controller='monitervm'>
            <div  ms-visible="isTester">
                <button type="button" class="btn btn-primary" ms-click="loadAddModal">添加监控</button>
            </div>
            <div id="pageSizeSelect"><a><span ms-class="{{pagesize1Cls}}"
                                          ms-click="changePageSize(pagesize1)">{{pagesize1}}</span></a> | <a><span
                ms-class="{{pagesize2Cls}}" ms-click="changePageSize(pagesize2)">{{pagesize2}}</span></a> |
                <a>
                    <spam ms-class="{{pagesize3Cls}}" ms-click="changePageSize(pagesize3)">{{pagesize3}}</spam>
                </a>
            </div>
            <table class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <td class="width-50">#</td>
                        <td class="width-200">添加时间</td>
                        <td>描述</td>
                        <td class="width-100">创建人</td>
                        <td class="width-100">详情</td>
                    </tr>
                </thead>
                <tbody>
                    <tr ms-repeat="monitorJobs">
                        <td>{{$index+jpageSize*(jpageIndex-1)+1}}</td>
                        <td>{{el.time}}</td>
                        <td>{{el.desc}}</td>
                        <td>{{el.creater}}</td>
                        <td><a ms-href="'/home/moniterdetails.html?jobid='+el.id"><span class="glyphicon glyphicon-eye-open"
                                                                          aria-hidden="true"></span></a></td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <p id="pagination"></p>
            </div>
            <!--ADD ENV Modal -->
            <div class="modal fade" id="addMoniterModal" tabindex="-1" role="dialog" aria-labelledby="addMoniterModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myAddMoniterModalLabel">添加监控</h4>
                        </div>
                        <div class="modal-body">
                            <div class="input-group">
                                <span class="input-group-addon">描述:</span>
                                <textarea class="form-control" rows="3" ms-duplex="jobDesc" style="width: 100%;resize: none;"></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="button" class="btn btn-default" ms-click="createMonitor">保存</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--ADD ENV Modal-->
        </div>
    </div>
    <!-- Content END-->
    <!--FOOTER -->
    <div ms-include-src="'/home/footer.html'"></div>
    <!--FOOTER END-->
</body>

</html>
